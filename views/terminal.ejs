<html>
    <head>
        <title><%- title %></title>
        <script type="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type="text/javascript" src="/require.js"></script>
        <style>
            * {
                padding: 0px;
                margin: 0px;
            }

            html {
                height: 100%;
            }

            body {
                height: 100%;
            }

            .cursor {
                position: absolute;
                background-color: white;
            }

            .cursor.blink {
                opacity : 0;
            }

            .cursor.steady {
                border: 1px solid white;
                background-color: transparent;
                box-sizing: border-box;
                -moz-box-sizing: border-box;
                -webkit-box-sizing: border-box;
            }

            .cursor.mask {
                outline: 1px solid white;
                background-color: transparent;
            }

            .terminal-container {
                overflow: hidden;
                position: relative;
            }

            .terminal {
                color: #fff;
                outline-width: 0;
                font-family: Courier, Courier New;
                font-size: 11pt;
                overflow-x: hidden;
                overflow-y: visible;
                background-color: #300a24;
            }

            .terminal > div {
                white-space: pre;
            }
        </style>
        <script type="text/javascript">
            require(['www/terminal'], function(WebTerminal) {
                window.terminal = new WebTerminal();
                window.terminal.run(location.protocol + '//' + location.host, document.body);
            });
        </script>
    </head>
    <body>
    </body>
</html>
