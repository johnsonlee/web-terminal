<html>
    <head>
        <title><%- title %></title>
        <script type="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type="text/javascript" src="/require.js"></script>
        <style>
            * {
                padding: 0px;
                margin: 0px;
            }

            html {
                height: 100%;
            }

            body {
                height: 100%;
            }

            .cursor {
                height: 14px;
                position: absolute;
                background-color: white;
            }

            .cursor.blink {
                opacity : 0;
            }

            .cursor.mask {
                outline: 1px solid white;
                background-color: transparent;
            }

            .terminal-container {
                overflow: hidden;
                position: relative;
            }

            .terminal {
                color: #fff;
                font-family: Courier, Courier New;
                font-size: 12pt;
                overflow-x: hidden;
                overflow-y: visible;
                background-color: black;
            }

            .terminal > div {
                height: 17px;
                white-space: pre;
                border-bottom: 1px dotted #111111;
            }
        </style>
        <script type="text/javascript">
            require(['www/terminal'], function(WebTerminal) {
                new WebTerminal().start(location.protocol + '//' + location.host, document.body);
            });
        </script>
    </head>
    <body>
    </body>
</html>
