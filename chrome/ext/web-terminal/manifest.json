{
  "manifest_version" : 2,

  "name"        : "Web Terminal",
  "version"     : "1.0",
  "description" : "Web terminal",

  "icons" : {
    "16"  : "icons/16/terminal.png",
    "48"  : "icons/48/terminal.png",
    "128" : "icons/128/terminal.png"
  },

  /*"background" : {
    "scripts" : ["background.js"],
    "persistent" : false
  },*/

  "browser_action"  : {
    "default_icon"  : "icons/48/terminal.png",
    "default_title" : "Web Terminal",
    "default_popup" : "popup.html"
  },

  "options_page" : "options.html",

  "permissions" : [
    "tabs",
    "storage"
  ]
}
